<div class="create-form">
    <h3>Edit Video </h3>
    <h5><%= item.name %></h5>
    <form method="POST" action=/video/<%= item._id %>?_method=PUT>
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" value=<%= item.name %>>
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea type="text" class="form-control" id="description" name="description" value=<%= item.description %>></textarea>
        </div>
        <div class="form-group">
            <label for="videoId">Video ID</label>
            <input type="text" class="form-control" id="videoId" name="videoId" value=<%= item.videoId %>>
        </div>
        <button type="submit" class="btn btn-primary">Edit</button>
    </form>
</div>
